<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="test02.Infrastructure.sql.RoleMapper">

    <resultMap id="BaseResultMap" type="test02.Domain.RoleEntity" >
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="creation_time" property="creation_time" jdbcType="TIMESTAMP" />
        <result column="description" property="description" jdbcType="VARCHAR" />
        <result column="state" property="state" jdbcType="INTEGER" />
    </resultMap>
    <select id="findAll" resultMap="BaseResultMap">
        SELECT id,name,createTime,state,description
        FROM role
        WHERE state=0;
    </select>

    <select id="getRoleNamesByCustomerId" resultType="String" parameterType="Long">
        SELECT name
        FROM role
        RIGHT JOIN
        customer_role
        ON customer_role.roleId = role.id
        WHERE customer_role.customerId=#{id};
    </select>

    <select id="getById" parameterType="Long" resultMap="BaseResultMap">
        SELECT id,name,createTime,state,description
        FROM role
        WHERE state=0
        AND id=#{id};
    </select>

    <select id="getByName" resultMap="BaseResultMap">
        SELECT id,name,createTime,state,description
        FROM role
        WHERE state=0
        AND name=#{name}
        AND IF(#{id} > 0,id <![CDATA[ <> ]]> #{id},1);
    </select>

    <insert id="addRole" keyColumn="id" parameterType="test02.Domain.RoleEntity" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO
        role(name,createTime,state,description)
        VALUES(#{name},#{createTime},#{state},#{description});
    </insert>

    <update id="updateById" parameterType="test02.Domain.RoleEntity">
        update role
        SET name=#{name},description=#{description}
        WHERE id=#{id};
    </update>

    <update id="deleteById" parameterType="Long">
        update role
        SET state=1
        WHERE id=#{id};
    </update>
</mapper>